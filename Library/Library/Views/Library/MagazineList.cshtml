@model Library.ViewModels.ModelsListsViewModel

<center><h1>Magazines</h1></center><br />
@foreach (var magazines in Model.Magazines)
{
    <div class="col-md-3">
        <div class="feature-text">
            @if (magazines.Covers.Count != 0)
            {
                foreach (var cover in magazines.Covers)
                {
                    <a href="/Magazine/EditMagazine/@magazines.Id">
                        @Html.Raw("<img class='coverView' src=\"data:image/jpeg;base64,"
                        + Convert.ToBase64String(cover.CoverForModels) + "\" />")
                    </a>
                }
            }
            else
            {
                <a href="/Magazine/EditMagazine/@magazines.Id">
                    <img class="coverView" src="~/Content/images/cover.png" />
                </a>
            }
            <a href="/Magazine/EditMagazine/@magazines.Id">
                <h3>@magazines.Title</h3>
            </a>
            <p>@magazines.CreationDate.ToString("d")</p>
            <p>@magazines.MagazineNumber</p>
        </div>
    </div>
}