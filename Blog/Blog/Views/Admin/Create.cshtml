@model Blog.ViewModels.EntitiesViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Blog.LocalResource.Resource.AddArticle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-2">
                <strong>@Blog.LocalResource.Resource.Title</strong>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Article.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <strong>@Blog.LocalResource.Resource.Text</strong>
            </div>
            <div class="col-xs-5">
                @Html.TextAreaFor(model => model.Article.Text, new { htmlAttributes = new { @class = "form-control" }, cols = 100, rows = 18 })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Blog.LocalResource.Resource.Save" class="btn btn-primary" />
                <a href="/Admin/Index" class="btn btn-warning">@Blog.LocalResource.Resource.ReturnToArticles</a>
            </div>
        </div>
    </div>
}