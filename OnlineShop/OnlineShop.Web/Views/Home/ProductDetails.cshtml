                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade" id="details">
                            @Model.Description
                        </div>

                        <div class="tab-pane fade active in" id="reviews">
                            <div class="col-sm-12">
                                <p><b>Write Your Review</b></p>

                                @using (Ajax.BeginForm("AddComment", new AjaxOptions { UpdateTargetId = "listOfComments", OnSuccess = "CleanField" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(x => x.Id)
                                    <span>
                                        @Html.TextBoxFor(x => x.UserName, "", new { id = "name", required = "required", placeholder = "Your Name" })


                                        @Html.TextBoxFor(x => x.Email, "", new { id = "email", required = "required", placeholder = "Email Adress" })


                                    </span>
                                        @Html.TextAreaFor(x => x.CommentText, new { id = "commentText", required = "required", placeholder = "Your Message" })


                                        @*<button type="button" class="btn btn-default pull-right">
                                                Submit
                                            </button>*@
                                        <button type="submit" onclick="validatetext(this.form)" class="btn btn-default pull-right">Submit</button>
                                }
                                <br /><hr />
                                <div id="listOfComments">
                                    @{Html.RenderPartial("AddComment");}
                                </div>

                            </div>
                        </div>



