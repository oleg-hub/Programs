@model List<OnlineShop.ViewModel.CartViewModel>

@{
    ViewBag.Title = "Cart";
}

@if (Model != null)
{
   <section id="cart_items">
        <div class="container">
            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Shopping Cart</li>
                </ol>
            </div>

            <div id="listOfProduct">
                @{Html.RenderPartial("ListOfProduct");}
            </div>
           
        </div>
    </section> <!--/#cart_items-->
                  <section id="do_action">
    <div class="container">
        <div class="row">
            <div class="total_area">
                <ul>
                    <li>Cart Sub Total <span>$@Model.Select(x => x.TotalPriceOfProduct).Sum()</span></li>
                    <li>Shipping Cost <span>Free</span></li>
                    <li>Total <span>$@Model.Select(x => x.TotalPriceOfProduct).Sum()</span></li>
                </ul>
                @*<a class="btn btn-default update" href="">Update</a>
                    <a class="btn btn-default check_out" href="">Check Out</a>*@
            </div>

            <div class="col-sm-12">
                <div class="contact-form">
                    <h2 class="title text-center">Fill The Form</h2>
                    <div class="status alert alert-success" style="display: none"></div>

                    @using (Html.BeginForm("SoldProduct", "Home"))
                    {
                        @*@Html.HiddenFor(x => item.Id)*@
                        <input type="hidden" name="cookiesValue" value=@Model.FirstOrDefault().CookiesValue class="form-control" placeholder="Name">
                        <div class="form-group col-md-6">
                            @*@Html.EditorFor(model => item.Name, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Name" } })*@
                            <input type="text" name="name" class="form-control" required="required" placeholder="Name">
                            <br />
                            <input type="text" name="lastName" class="form-control" required="required" placeholder="Last Name">
                            <br />
                            <input type="email" name="email" class="form-control" required="required" placeholder="Email">
                            <br />
                            <input type="number" name="number" class="form-control" required="required" placeholder="Phone number">
                        </div>
                        <div class="col-md-6">
                            <textarea name="address" id="address" class="form-control" rows="7" placeholder="Address"></textarea>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" name="submit" class="btn btn-primary pull-right" value="Submit">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section><!--/#do_action-->
}