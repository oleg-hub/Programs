@model OnlineShop.ViewModel.ProductViewModel
@{
    ViewBag.Title = "AddProduct";
}

@using (Html.BeginForm("AddProduct", "Administrator", FormMethod.Post, new
{ @*id = "formforbook",*@ enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
    <center>
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-md-2">
                    <strong>Name</strong>
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <strong>Price</strong>
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <strong>Product Description</strong>
                </div>
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <strong>Kind Of Goods</strong>
                </div>
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.KindOfGoods,
                    EnumHelper.GetSelectList(typeof(OnlineShop.Entities.Enums.Category)),
                    new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <strong>Brand</strong>
                </div>
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.Brand,
                    EnumHelper.GetSelectList(typeof(OnlineShop.Entities.Enums.Brand)),
                    new { @class = "form-control" })
                </div>
            </div>



            @*<div class="file_upload">
                <button type="button" class="buttonforfile">Select new cover</button>

                <input type="file">
                <div>No file</div>*@
            <div class="form-group">
                <div class="col-md-2">
                    @*<strong>Price</strong>*@
                </div>
                <div class="col-md-4">
                    <input type="file" accept="image/x-png, image/gif, image/jpeg" id="uploadImage" name="uploadImage" />
                    <br />
                    <button @*id="signupSubmit"*@ class="btn btn-info btn-block">Save</button><br />
                </div>

            </div>  <br />


            @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                      <input type="submit" value="@Blog.LocalResource.Resource.Save" class="btn btn-primary" />
                        <a href="/Admin/Index" class="btn btn-warning">Return Back</a>
                    </div>
                </div>*@
        </div>
    </center>
}

